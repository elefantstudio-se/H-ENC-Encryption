<Window x:Class="H_ENC___Helix_Encryption.msgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="H-ENC Status Window:" Height="209" Width="390" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Height="185" VerticalAlignment="Top" Margin="0,0,4,0">
        <Image x:Name="imgvalid" Source="locked_ok.png" HorizontalAlignment="Left" Height="88" Margin="10,44,0,0" VerticalAlignment="Top" Width="87"/>
        <Button x:Name="msgboxClose" Click="msgboxClose_Click"  Content="Ok!" HorizontalAlignment="Left" Margin="263,127,0,0" Width="69" BorderBrush="#FF54BEFB" Height="19" VerticalAlignment="Top" RenderTransformOrigin="-0.101,0.52"/>
        <TextBlock x:Name="txtBlock" HorizontalAlignment="Left" Height="66" Margin="130,56,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="219" FontWeight="Bold" FontSize="16" Foreground="#FF54BEFB"/>
    </Grid>
</Window>
